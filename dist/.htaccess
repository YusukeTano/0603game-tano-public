# Apache server configuration for Rhythm Survivor game

# Custom error pages
ErrorDocument 404 /error.html?code=404&type=not_found
ErrorDocument 500 /error.html?code=500&type=server_error
ErrorDocument 403 /error.html?code=403&type=access_denied
ErrorDocument 408 /error.html?code=408&type=timeout

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

# Set proper MIME types for ES6 modules
AddType application/javascript .js .mjs

# Cache control
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    # CORS for ES6 modules (adjust domain as needed)
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
    
    # Security headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Redirect to index.html for SPA behavior
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle ES6 module requests
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} \.(js|mjs)$
    RewriteRule ^(.*)$ error.html?code=404&type=module_error [L,QSA]
    
    # Handle other requests
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/error\.html
    RewriteRule ^(.*)$ error.html?code=404&type=not_found [L,QSA]
</IfModule>